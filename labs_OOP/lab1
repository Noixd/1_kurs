#include <iostream>
#include <locale>

using namespace std;

class Square
{
private:
	double x1;
	double y1;

public:
	Square() {
		x1 = 0;
		y1 = 0;
	}

	Square(double inpx, double inpy) {
		x1 = inpx;
		y1 = inpy;
	}

	Square(const Square &copy) {
		cout << "Copy" << endl;
		x1 = copy.x1;
		y1 = copy.y1;
	}

	~Square() {
		cout << "Destructor" << endl;
	}

	void Set() { 
		cout << "Введите X" << endl;
		cin >> x1;
		cout << "Введите Y" << endl;
		cin >> y1;
	}

	void Get() {
		cout << "Координаты точки:" << endl << "X1: " << x1 << "px" << endl << "Y1: " << y1 << "px" << endl;
	}

	double Area() {
		return x1 * y1;
	}

	void DI() {
		int i = 1000;
		while (i>0)
		{
			cout << i << endl;
			i -= 7;
		}
	}
};

int main() {
	setlocale(LC_ALL, "ru");

	Square sq1;

	sq1.Get();

	sq1.~Square();

	sq1.Set();

	sq1.Get();

	cout << "Площадь прямоугольника: " << sq1.Area() << endl;

	Square sq2 = sq1;

	sq2.Get();

	sq2.DI();

	return 0;
}
