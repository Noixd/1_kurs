#include <iostream>
#include <locale>

using namespace std;

class Square
{
private:
	double x1;
	double y1;

public:
	Square() {
		x1 = 0;
		y1 = 0;
	}

	Square(double inpx, double inpy) {
		x1 = inpx;
		y1 = inpy;
	}

	void Set() { 
		cout << "Введите координаты" << endl;
		cin >> x1;
		cin >> y1;
	}

	void Get() {
		cout << "Координаты точки:" << endl << "X1: " << x1 << endl << "Y1: " << y1 << endl;
	}

	double Area() {
		return x1 * y1;
	}
};

int main() {
	setlocale(LC_ALL, "ru");

	Square sq1;

	sq1.Set();

	sq1.Get();

	cout << "Площадь прямоугольника: " << sq1.Area() << endl;

	return 0;
}
